{
	"name": "svelte-clerk",
	"version": "0.1.8",
	"license": "MIT",
	"homepage": "https://github.com/wobsoriano/svelte-clerk#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wobsoriano/svelte-clerk.git"
	},
	"bugs": "https://github.com/wobsoriano/svelte-clerk/issues",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"release": "pnpm run package && changeset publish",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"svelte": "./dist/components/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"svelte": "./dist/server/index.js"
		},
		"./env": "./dist/env.d.ts"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0-next.1"
	},
	"typesVersions": {
		">4.0": {
			"index.d.ts": [
				"./dist/index.d.ts"
			],
			"components": [
				"./dist/components/index.d.ts"
			],
			"server": [
				"./dist/server/index.d.ts"
			],
			"env.d.ts": [
				"./dist/env.d.ts"
			]
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.8",
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/kit": "^2.5.26",
		"@sveltejs/package": "^2.3.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.7",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.8.0",
		"postcss": "^8.4.39",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.10",
		"svelte": "^5.0.0-next.245",
		"svelte-check": "^4.0.2",
		"tailwindcss": "^3.4.6",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.5.0",
		"vite": "^5.4.4"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@clerk/backend": "^1.13.4",
		"@clerk/shared": "^2.8.1",
		"@clerk/types": "^4.21.0"
	}
}
